<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TracageAlimentaireXamarin.Views.NextTreatmentValidationPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="{Binding Path=TreatmentToValidate.Name}"/>
            <Label Text="{Binding Path=TreatmentToValidate.Description}"/>
            <Label Text="{Binding Path=TreatmentToValidate.OutgoingState.Status}"/>
            <Button Text="VALIDATE TREATMENT" Command="{Binding ValidateCommand}"/>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>